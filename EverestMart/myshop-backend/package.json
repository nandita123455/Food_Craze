{
  "name": "myshop-backend",
  "version": "1.0.0",
  "description": "EverestMart Backend - 10-minute grocery delivery platform with support for 1000+ concurrent users",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "cluster": "node server-cluster.js",
    "test:load": "SET SKIP_RATE_LIMIT=true&& node stress-test.js",
    "test:load:linux": "SKIP_RATE_LIMIT=true node stress-test.js",
    "docs": "node generate-docs.js",
    "cleanup": "node cleanup-windows.js",
    "audit-fix": "npm audit fix",
    "production-ready": "node cleanup-windows.js && npm audit fix && npm run docs",
    "health": "node -e \"require('http').get(`http://localhost:5000`http://localhost:5000'}/api/health', res => { let data = ''; res.on('data', d => data += d); res.on('end', () => console.log(JSON.parse(data))); });\""
  },
  "keywords": [
    "ecommerce",
    "grocery",
    "delivery",
    "express",
    "mongodb",
    "nodejs",
    "socket.io",
    "payment-gateway"
  ],
  "author": "EverestMart Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/everestmart-backend"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.20.3",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.3",
    "twilio": "^5.10.7",
    "uuid": "^13.0.0"
  },
