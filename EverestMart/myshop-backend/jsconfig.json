{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "skipLibCheck": true,
        "checkJs": false,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}