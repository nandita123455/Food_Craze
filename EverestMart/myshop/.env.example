# ============================================
# EVERESTMART FRONTEND - ENVIRONMENT TEMPLATE
# Copy this to .env and update values
# ============================================

# API Configuration - Update for your environment
VITE_API_URL=${import.meta.env.VITE_API_URL || 'http://localhost:5000'}/api
VITE_API_BASE_URL=${import.meta.env.VITE_API_URL || 'http://localhost:5000'}/api
VITE_SOCKET_URL=${import.meta.env.VITE_API_URL || 'http://localhost:5000'}

# Google Maps API Key - Get from: https://console.cloud.google.com/
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Application Settings
VITE_APP_ENV=development
VITE_APP_NAME=EverestMart
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# Recommendation API (Optional - ML Service)
VITE_RECOMMENDATION_API_URL=

