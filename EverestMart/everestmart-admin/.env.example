# Admin Panel Environment Variables Template
# Copy this file to .env.local for local development

# ===========================================
# API CONFIGURATION
# ===========================================
REACT_APP_API_URL=${import.meta.env.VITE_API_URL || 'http://localhost:5000'}/api
REACT_APP_BACKEND_URL=${import.meta.env.VITE_API_URL || 'http://localhost:5000'}
REACT_APP_SOCKET_URL=${import.meta.env.VITE_API_URL || 'http://localhost:5000'}

# ===========================================
# APPLICATION SETTINGS
# ===========================================
REACT_APP_ENV=development
REACT_APP_NAME=EverestMart Admin
REACT_APP_ENABLE_DEBUG=true

# ===========================================
# PRODUCTION URLS (for reference)
# ===========================================
# REACT_APP_API_URL=https://api.yourdomain.com/api
